{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/AppData/Roaming/komorebi/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "window_container_behaviour": "Create",
  "cross_monitor_move_behaviour": "Insert",
  "focus_follows_mouse": "Windows",
  "animation": {
    "enabled": true,
    "duration": 250,
    "fps": 60,
    "style": "Linear"
  },
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "border": true,
  "border_width": 3,
  "border_offset": -1,
  "border_implementation": "Windows",
  "border_style": "System",
  "border_colours": {
    "single": "#4e42f5",
    "stack": "#ffd500",
    "monocle": "#ca0000"
  },
  "transparency": true,
  "transparency_alpha": 245,
  "resize_delta": 100,
  "stackbar": {
    "height": 20,
    "lable": "Title",
    "mode": "OnStack",
    "tabs": {
      "width": 100,
      "focused_text": "#00a542",
      "unfocused_text": "#b3b3b3",
      "background": "#141414"
    }
  },
  "manage_rules": [
    {
      "kind": "Class",
      "id": "TeamsWebView",
      "matching_strategy": "Equals"
    }
  ],
  "float_rules": [
    {
      "kind": "Class",
      "id": "TeamsWebView",
      "matching_strategy": "Equals"
    }
  ],
  "float_rules": [
    {
      "kind": "Title",
      "id": "LibreWolf - Choose User Profile",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Class",
      "id": "VbaWindow",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Class",
      "id": "UIX:Window",
      "matching_strategy": "StartsWith"
    },
    {
      "kind": "Title",
      "id": "Group Rooms",
      "matching_strategy": "Equals"
    }
  ]
}
